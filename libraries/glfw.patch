+static inline GLFWbool selfPipe(int fds[2])
+{
+    if (pipe(fds) != 0)
+        return GLFW_FALSE;
+
+    int i;
+    for (i = 0; i < 2; i++)
+    {
+        int flags = fcntl(fds[i], F_GETFD);
+        if (flags == -1)
+            break;
+        if (fcntl(fds[i], F_SETFD, flags | FD_CLOEXEC) == -1)
+            break;
+        flags = fcntl(fds[i], F_GETFL);
+        if (flags == -1)
+            break;
+        if (fcntl(fds[i], F_SETFL, flags | O_NONBLOCK) == -1)
+            break;
+    }
+
+    if (i == 2)
+        return GLFW_TRUE;
+
+    close(fds[0]);
+    close(fds[1]);
+
+    return GLFW_FALSE;
+}
